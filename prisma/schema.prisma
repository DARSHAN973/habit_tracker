generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String       @id @default(uuid())
  name      String
  email     String       @unique
  password  String
  createdAt DateTime     @default(now())
  habits    Habit[]
  entries   HabitEntry[]
  sessions  Session[]
}

model Habit {
  id        String        @id @default(uuid())
  userId    String
  title     String
  type      HabitType
  category  HabitCategory
  days      Json?
  startDate DateTime
  isActive  Boolean       @default(true)
  createdAt DateTime      @default(now())
  user      User          @relation(fields: [userId], references: [id])
  entries   HabitEntry[]

  @@index([userId], map: "Habit_userId_fkey")
}

model HabitEntry {
  id        String      @id @default(uuid())
  userId    String
  habitId   String
  date      DateTime
  status    HabitStatus
  createdAt DateTime    @default(now())
  habit     Habit       @relation(fields: [habitId], references: [id])
  user      User        @relation(fields: [userId], references: [id])

  @@unique([habitId, date])
  @@index([userId], map: "HabitEntry_userId_fkey")
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId], map: "Session_userId_fkey")
}

enum HabitType {
  DAILY
  WEEKLY
}

enum HabitStatus {
  DONE
  MISSED
}

enum HabitCategory {
  HEALTH
  FOCUS
  SKILL
  PERSONAL
}
